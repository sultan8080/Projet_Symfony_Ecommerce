<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body
		class="bg-light">

		{# top header section #}
		<header class="bg-warning topHeader">
			<div class="container ">
				<div class="d-flex flex-column flex-sm-row justify-content-sm-between justify-content-sm-center align-items-center">
					<small class=" d-flex align-items-center">
						<a href="#" class="text-info me-3 text-decoration-none">
							<i class="bi bi-facebook"></i>
						</a>
						<a href="#" class="text-info me-3 text-decoration-none">
							<i class="bi bi-twitter"></i>
						</a>
						<a href="#" class="text-info me-3 text-decoration-none">
							<i class="bi bi-instagram"></i>
						</a>
						<a href="#" class="text-info me-3 text-decoration-none">
							<i class="bi bi-linkedin"></i>
						</a>
					</small>
					<small class=" ">
						<a href="tel:+33323456789" class="text-info me-3 text-decoration-none">
							<i class="bi bi-telephone-fill"></i>
							03.23.45.67.89

						</a>
						<a href="mailto:contact@vegfruit.fr" class="text-info text-decoration-none">
							<i class="bi bi-envelope-fill"></i>
							contact@vegfruit.fr</a>

					</small>
				</div>
			</div>
		</header>
		{# Header Logo Section #}
		<div class="container mt-2 mt-sm-3 mt-lg-4 d-flex flex-column flex-sm-row flex-lg-column justify-content-between align-items-center align-items-lg-end  justify-content-lg-center mt- ">
			<div class=" imgWidth mx-lg-auto">
				<a href="{{path('home')}}">
					<img src="{{asset('logo/logo.png')}}" class="img-fluid" alt="logo">
				</a>
			</div>
			<div class="d-flex mt-3 mt-sm-0">
				<form style="height:39px" class="d-flex">
					<input class="form-control mr-sm-2" type="Chercher" placeholder="" aria-label="Search">
					<button class="btn btn-warning" type="submit">
						<i class="bi bi-search"></i>
					</button>
				</form>
				<div class="d-flex">
					<div class="ms-2">
						<a class="btn btn-outline-info" href="{{path('panier_card')}}">
							<i class="bi bi-cart h5"></i>
						</a>
					</div>
					<div class="dropdown ms-2 ">
						{% if app.user %}
							<button class="btn btn-outline-info dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">

								<img src="https://github.com/mdo.png" alt="mdo" width="28" height="28" class="rounded-circle img-fluid">
							</button>
							<ul class="dropdown-menu dropdown-menu-end">
								<li>
									<a class="dropdown-item ">
										Bienvenue,
										<span class="text-info fw-bold">
											{{ app.user.nom |upper }}
										</span>

									</a>
								</li>
								<li><hr class="dropdown-divider"></li>
								<li>
									<a class="dropdown-item" href="{{path('app_login')}}">
										<i class="bi bi-box-arrow-in-right h6 me-1"></i>
										Mon Profile</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{path('app_register')}}">
										<i class="bi bi-person-add h me-1"></i>
										Historique des commandes</a>
								</li>
								<li>
									<a class="dropdown-item" href="#">
										<i class="bi bi-envelope-at h6 me-1"></i>
										Modifier le Mot de passe</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{ path('app_logout') }}">
										<i class="bi bi-box-arrow-in-left h6 me-1"></i>
										Déconnecter</a>
								</li>
							{% else %}
								<button class="btn btn-info dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
									<i class="bi bi-list h5"></i>
								</button>
								<ul class="dropdown-menu dropdown-menu-end">
									<li>
										<a class="dropdown-item" href="{{path('app_login')}}">
											<i class="bi bi-box-arrow-in-right h6 me-1"></i>
											Se Connecter</a>
									</li>
									<li>
										<a class="dropdown-item" href="{{path('app_register')}}">
											<i class="bi bi-person-add h5 me-1"></i>
											S'inscrire</a>
									</li>

								{% endif %}
								<li><hr class="dropdown-divider"></li>

								<li>
									<a class="dropdown-item" href="#">
										<i class="bi bi-envelope-at h6 me-1"></i>
										Contact</a>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>

		{% block body %}{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS" crossorigin="anonymous"></script>
	</body>
</html>
