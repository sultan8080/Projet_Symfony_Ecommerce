{% extends 'base.html.twig' %}

{% block title %}Mon Panier!
{% endblock %}

{% block body %}

	{# {{dump(cart)}} #}
	{% if cart|length>0 %}
		<section class="h-100" style="margin-top :-8px">
			<div class="container h-100 pt-2">
				<div class="row bg-light d-flex justify-content-center align-items-center h-100">
					<div class="col-10">

						<div class=" mt-4 mb-4">
							<h3 class="fw-bold mb-0 text-info text-end">Mon Panier</h3>
						</div>
						<p class="h6 mb-0 mt-3 text-end">Souhaitez-vous ajouter d'autre produits? &nbsp
							<a href="{{path('product_home')}}" class="btn btn-sm btn-outline-info">
								Voir les listes
							</a>
						</p>


						{% set itemtotalPrix = null %}
						{% set grandTotal = null %}
						{% set quantityTotal = null %}

						{% for item in cart %}
							{% set itemtotalPrix = item.product.prix * item.quantity %}
							{% set grandTotal = grandTotal + itemtotalPrix %}
							{% set quantityTotal = quantityTotal + item.quantity %}

							<div class=" rounded-3">
								<div class="card-body p-4">
									<div class="row d-flex justify-content-between align-items-center">
										<div class="col-md-2 col-lg-2 col-xl-2">
											<img src="{{item.product.image}}" class="img-fluid rounded-3" alt="Cotton T-shirt">
										</div>
										<div class="col-md-3 col-lg-3 col-xl-3">
											<p class="lead fw-normal mb-2">{{item.product.nom}}</p>
											<p>
												{# <span class="text-muted">{{item.product.sousTitre}}
																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																