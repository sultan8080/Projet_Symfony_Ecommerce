												<span class="text-muted">Prix Unitaire:
													{{item.product.prix}}
												</span>
											</p>
										</div>

										{# {{path('quantity_increase)}} #}
										{# {{path('quantity_decrease')}} #}
										{# {{product.quantity}} #}
											<div class="col-md-3 col-lg-3 col-xl-2 d-flex"> <a href="" class="btn btn-link px-2">

												<i class="bi bi-dash-square-fill text-secondary" style="font-size: 1.2rem;"></i>
											</a>

											<input value="{{item.quantity}}" type="number" class="form-control" readonly/>

											<a href="" class="btn btn-link px-2">

												<i class="bi bi-plus-square-fill text-secondary" style="font-size: 1.2rem;"></i>
											</a>
										</div>
										<div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1 ">
											<h5 class="mb-0">
												{{(itemtotalPrix)|number_format(2, ',', '.')}}
												€
											</h5>
										</div>
										<div class="col-md-1 col-lg-1 col-xl-1 text-end">
											<a href="{{path('remove_item', {id:item.product.id})}}" class="text-secondary">
												<i class="bi bi-trash3" style="font-size: 1.5rem; color: gray;"></i>
											</a>
										</div>
										<hr class="mt-3">
									</div>
								</div>
							</div>

						{% endfor %}

						<div class=" mb-3">
							<div class="d-flex justify-content-between mx-3 mb-3">
								<p class="text-secondary">
									Produits Totale: &nbsp
									<span class="fw-bold">{{cart|length}}
									</span>
								</p>
								<p class="text-secondary">
									Quantité totale: &nbsp
									<span class="fw-bold">{{quantityTotal}}
									</span>
								</p>
								<p>
									PRIX TOTALE :
									<span class="fw-bold h4">
										{{grandTotal|number_format(2, ',', '.')}}€</span>
								</p>
							</div>
							<div class="text-end">
								<a type="button" class="btn btn-info w-50">Valider mon panier</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

	{% else %}

		<div class="text-center mt-5">
			<div>
				<i class="bi bi-binoculars-fill " style="font-size: 1.3rem;"></i>
			</div>
			<br><br><br>
			<div>
				<i class="bi bi-cart-dash text-info" style="font-size: 4rem; "></i>
			</div>

			<h2 class="text-center text-danger mt-4">
				VOTRE PANIER EST VIDE</h2>

			<P>
				Commence votre shopping dès maintenant à travers nos articles
			</P>
			<div class="card-body text-center mb-3">
				<a href="{{path('product_home')}}" type="button" class="btn btn-info">VOIR LES PRODUITS</a>
			</div>
		</div>


		{% endif%}
	{% endblock %}
